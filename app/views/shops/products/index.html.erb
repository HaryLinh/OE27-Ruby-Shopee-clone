<%= provide :title, t("shop.product.index.title") %>
<div class="container-fluid">
  <div class="row product-adding">
    <div class="col-12">
      <div class="card">
        <div class="card-header p-b-0 p-t-1">
          <%= link_to t("shop.product.create.add"), new_shops_product_path, class: "btn btn-success float-right" %>
        </div>
        <div class="card-body">
          <div class="digital-add needs-validation">
            <table id="data-table" class="table table-hover table-bordered">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t "shop.product.create.name" %></th>
                  <th><%= t "shop.product.create.price" %></th>
                  <th><%= t "shop.product.create.brand" %></th>
                  <th><%= t "shop.product.create.category" %></th>
                  <th><%= t "shop.product.index.created_at" %></th>
                  <th><%= t "shop.product.index.function" %></th>
                </tr>
              </thead>
              <tbody>
                <%= render @products %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
