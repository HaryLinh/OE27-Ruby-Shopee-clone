            <div class="footer-social">
              <ul>
                <li><i class="fa fa-facebook" aria-hidden="true"></i></li>
                <li><i class="fa fa-google-plus" aria-hidden="true"></i></li>
                <li><i class="fa fa-twitter" aria-hidden="true"></i></li>
                <li><i class="fa fa-instagram" aria-hidden="true"></i></li>
                <li><i class="fa fa-rss" aria-hidden="true"></i></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col offset-xl-1">
          <div class="sub-title">
            <div class="footer-title">
              <h4><%= t "home.footer.account" %></h4>
            </div>
            <div class="footer-contant">
              <ul>
                <li></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="sub-title">
            <div class="footer-title">
              <h4><%= t "home.footer.cause" %></h4>
            </div>
            <div class="footer-contant">
              <ul>
                <li></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="sub-title">
            <div class="footer-title">
              <h4><%= t "home.footer.store_information" %></h4>
            </div>
            <div class="footer-contant">
              <ul class="contact-list">
                <li><i class="fa fa-map-marker"></i><%= t "home.footer.address" %>
                </li>
                <li><i class="fa fa-phone"></i><%= t "home.footer.phone" %></li>
                <li><i class="fa fa-envelope-o"></i><%= t "home.footer.mail" %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</footer>
