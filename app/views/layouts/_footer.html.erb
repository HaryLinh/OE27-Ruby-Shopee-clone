<footer>
  <div class="light-layout">
    <div class="container">
      <section class="small-section border-section border-top-0">
        <div class="row">
          <div class="col-lg-6">
            <div class="subscribe">
              <div>
                <h4><%= t "home.footer.know_text" %></h4>
                <p><%= t "home.footer.remember_text" %></p>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
          </div>
        </div>
      </section>
    </div>
  </div>
