<ul>
  <% if category.sub_categories.any? %>
    <% category.sub_categories.each do |sub_category| -%>
      <li>
        <%= link_to "#" do %>
          <%= sub_category.name %>
        <% end %>
        <%= render partial: "layouts/category", locals: {category: sub_category} %>
       </li>
    <% end -%>
  <% end %>
</ul>
