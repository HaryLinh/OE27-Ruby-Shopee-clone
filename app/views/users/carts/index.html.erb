<section class="cart-section section-b-space">
  <div class="container">
     <div class="theme-tab">
        <ul class="tabs tab-title">
          <li class="current">
            <%= link_to t("home.cart.your_cart"), "tab-4" %>
          </li>
          <li>
            <%= link_to t("home.cart.pending"), "tab-5" %>
          </li>
          <li>
            <%= link_to t("home.cart.checked"), "tab-6" %>
          </li>
          <li>
            <%= link_to t("home.cart.shiped"), "tab-7" %>
          </li>
        </ul>
        <div class="tab-content-cls">
          <div id="tab-4" class="tab-content active default">
            <% if session[:order] %>
              <%= render "new_order" %>
            <% else %>
              <h2 class="empty-cart"><%= t "home.cart.empty" %></h2>
            <% end %>
          </div>
          <div id="tab-5" class="tab-content">
            <tbody>
              <% if @order[:order_pending] %>
                <%= render "staging_order", orders: @order[:order_pending] %>
              <% end %>
            </tbody>
          </div>
          <div id="tab-6" class="tab-content">
            <tbody>
              <% if @order[:order_checked] %>
                <%= render "staging_order", orders: @order[:order_checked] %>
              <% end %>
            </tbody>
          </div>
          <div id="tab-7" class="tab-content">
            <tbody>
              <% if @order[:order_shiped] %>
                <%= render "staging_order", orders: @order[:order_shiped] %>
              <% end %>
            </tbody>
          </div>
        </div>
      </div>
  </div>
</section>
